<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="Hangman Game">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="40"/>
        <Image x:Name="HangmanImage" Margin="40" HorizontalOptions="Center"/>
        <Label x:Name="WordLabel" FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40"/>
        <Entry x:Name="GuessEntry" FontSize="30" HorizontalOptions="Center" Margin="40" Placeholder="Enter your next guess"/>
        <Button Text="Guess" Clicked="GuessButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
